{% extends 'layout.njk' %}

{% block content %}

    <div class="teachers">

        {% for teacher in teachers.instructors %}
            <div class="teacher" id="{{teacher.id}}">
                <div class="perfil">
                    <img src={{teacher.avatar_url}} alt="Foto do perfil de {{teacher.name}}">
                    <div>
                        <h3>{{teacher.name}}</h3>
                        <span> {{"Presencial" if teacher.tipo_de_aula == "P" else "Distância" }}</span>
                    </div>
                </div>
            
                <div class="contentcard">
                    
                    <div class="areas">
                        <h5>Área de Atuação</h5>
                        <div class="area">
                            <span>{{teacher.area_de_atuacao}}</span>
                        </div>
                    </div>
                    
                    <div class="portfolio">
                        <div>
                            <span></span>
                            <p></p>
                        </div>
                        <div>
                            <span></span>
                            <p></p>
                        </div>
                    </div>

                </div>
            </div>

        {% endfor %}
    </div>
    
{% endblock content %}