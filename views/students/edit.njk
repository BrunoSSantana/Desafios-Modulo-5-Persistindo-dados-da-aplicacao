{% extends 'layout.njk' %}

{% block content %}
    
    <div class="card">

        <section
            class="avatar"
            style="background: url({{teacher.avatar_url}}) no-repeat center center / cover" >
        </section>

        <section class="details">
            <form method="POST" action="/students?_method=PUT">
            
                <h3>Editar Instrutor</h3>
                {% include 'students/fields.njk' %}  
                <input type="hidden" name="id" value="{{teacher.id}}">

            </form>

            <form class="form-delete" action="/students?_method=DELETE" method="post">

                <input type="hidden" name="id" value={{teacher.id}}>
                <button type="submit">Deletar</button>
            
            </form>

        </section>

    </div>
{% endblock content %}