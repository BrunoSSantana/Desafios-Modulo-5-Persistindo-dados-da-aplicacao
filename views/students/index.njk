{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <table width="100%">
            <thead>
                <tr>
                    <th>member</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td><span style="background-image: url({{member.avatar_url}})" ></span></td>
                        <td>{{member.name}}</td>
                        <td>{{member.area_de_atuacao}}</td>
                        <td><a href="/members/{{member.id}}">ir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
    
{% endblock content %}