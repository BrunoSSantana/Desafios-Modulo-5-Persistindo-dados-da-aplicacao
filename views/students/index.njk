{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <table width="100%">
            <thead>
                <tr>
                    <th>student</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td><span style="background-image: url({{student.avatar_url}})" ></span></td>
                        <td>{{student.name}}</td>
                        <td>{{student.area_de_atuacao}}</td>
                        <td><a href="/students/{{student.id}}">ir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
    
{% endblock content %}