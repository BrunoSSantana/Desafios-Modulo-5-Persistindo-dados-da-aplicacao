<div class="item">
    <div>Avatar URL</div>
        <div>
            <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://"
            value="{{student.avatar_url}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Full Name</div>
        <div>
            <input 
            type="text" 
            name="name"
            placeholder="Seu Nome"
            value="{{student.name}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Birthdate</div>
        <div>
            <input 
            type="date"
            name="birth_date"
            value="{{student.birth_date}}"
            >
        </div>
    </div>

    <div class="item">
        <div>E-mail</div>
        <div>
            <input type="email"
            name="email"
            placeholder="@exemplo.com"
            value="{{student.email}}"
            >
        </div>
    </div>

    <div class="item">
        <div>School Year</div>
        <div>
            <select name="school_year" >
                <option 
                    value=""
                    disabled 
                    {# {% if student.school_year == "" %} #}
                    selected
                    {# {% endif %} #}  
                    >Select your school year</option>
                <option 
                    value="5"
                    {% if student.school_year == "5" %}
                    selected
                    {% endif %}
                    >5th Year of Elementary School</option>
                <option 
                    value="6"
                    {% if student.school_year == "6" %}
                    selected
                    {% endif %}
                    >6º Year of Elementary School</option>
                <option
                    value="7"
                    {% if student.school_year == "7" %}
                    selected
                    {% endif %}
                    >7º Year of Elementary School</option>
                <option 
                    value="8"
                    {% if student.school_year == "8" %}
                    selected
                    {% endif %}
                    >8º Year of Elementary School</option>
                <option 
                    value="9"
                    {% if student.school_year == "9" %}
                    selected
                    {% endif %}
                    >9º Year of Elementary School</option>
                    <option 
                    value="1"
                    {% if student.school_year == "1" %}
                    selected
                    {% endif %}
                    >1º year of high school</option>
                <option 
                    value="2"
                    {% if student.school_year == "2" %}
                    selected
                    {% endif %}
                    >2º year of high school</option>
                <option 
                    value="3"
                    {% if student.school_year == "3" %}
                    selected
                    {% endif %}
                    >3º year of high school</option>
            </select>
        </div>
    </div>

    <div class="item">
        <div>Workload</div>
        <div>
            <input
            name="workload"
            type="number"
            value="{{student.workload}}"
            >
        </div>
    </div>

    <button type="submit">Salvar</button>