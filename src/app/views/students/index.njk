{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <div class="header">
            <a href="/students/create">New</a>
    
            <form action="/students" method="GET">
                <input
                type="text"
                name="filter"
                placeholder="Nome"
                value="{{filter}}"
                >
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table id="table-students" width="100%">
            <thead>
                <tr>
                    <th>student</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr id="table-students" >
                        <td><span style="background-image: url({{student.avatar_url}})" ></span></td>
                        <td>{{student.name}}</td>                        
                        <td><a href="/students/{{student.id}}">ir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>


        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{pagination.filter}}
        ></div>
    </div>
    
{% endblock content %}