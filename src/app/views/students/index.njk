{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <div class="header">
            <a href="/students/create">New</a>
            <form action="/students" method="GET">
                <input
                type="text"
                name="filter"
                placeholder="Filtrar">
                <button type="submit">Filtrar</button>
            </form>
        </div>
        
        <table width="100%">
            <thead>
                <tr>
                    <th>student</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td><span style="background-image: url({{student.avatar_url}})" ></span></td>
                        <td>{{student.name}}</td>                        
                        <td><a href="/students/{{student.id}}">ir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock content %}