{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover" >
        </section>
        
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Name</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{student.age}}</div>
            </div>

            <div class="item">
                <div>Birthday</div>
                <div>{{student.birth_date}}</div>
            </div>

            <div class="item">
                <div>School year</div>
                <div>{{student.school_year}}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{student.email}}</div>
            </div>

            <div class="item">
                <div>Workload</div>
                <div>{{student.workload}}</div>
            </div>

            <div class="item">
                <div>Student of</div>
                <div>{{student.teacher_name}}</div>
            </div>

            <div class="item">
                <div>Since</div>
                <div>{{student.create_at}}</div>
            </div>

            <a class="button" href="/students/{{student.id}}/edit">Edit</a>

        </section>
        
    </div>
{% endblock content %}