{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover" >
        </section>
        
        <section class="details">
            <h3>Details</h3>

            <div class="item">
                <div>Teacher</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Education Level</div>
                <div>{{teacher.education_level}}</div>
            </div>

            <div class="item">
                <div>Class type</div>
                <div>{{"Presential" if teacher.class_type == "P" else "Remote"}}</div>
            </div>

            <div class="item">
                <div>Attendance</div>
                    <div class="services">
                        {% for service in teacher.subjects_taught %}
                            <span>{{service}}</span>
                        {% endfor %}
                    </div>
            </div>

            <div class="item">
                <div>Since</div>
                <div>{{teacher.create_at}}</div>
            </div>

            <a class="button" href="/teachers/{{teacher.id}}/edit">Edit</a>

        </section>
        
    </div>
{% endblock content %}