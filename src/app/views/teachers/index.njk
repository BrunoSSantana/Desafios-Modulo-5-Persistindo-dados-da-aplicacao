{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <div class="header">
            <a href="/teachers/create">New</a>
            
            <form action="/teachers" method="GET">
                <input
                type="text"
                name="filter"
                placeholder="Nome ou atendimento"
                value="{{filter}}"
                >
                <button type="submit">Filtrar</button>
            </form>
        </div>
        <table id="table-teachers" width="100%">
            <thead>
                <tr>
                    <th>teacher</th>
                    <th>Attendence</th>
                    <th>Students</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr id="table-teachers">
                        <td><span style="background-image: url({{teacher.avatar_url}})" ></span></td>
                        <td>{{teacher.name}}</td>
                        <td>{{teacher.subjects_taught}}</td>
                        <td>{{teacher.total_students}}</td>
                        <td><a href="/teachers/{{teacher.id}}">ir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{pagination.filter}}
        ></div>
        
    </div>
    
{% endblock content %}